<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Ajout">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:gravity="center"
        android:text="Ajout"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/ednom_ajout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="saisir nom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edprenom_ajoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="saisir prenom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ednum_ajout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="saisir numero"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnqte_ajout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8488A1"
            android:text="Quitter" />

        <Button
            android:id="@+id/btnval_ajout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#8488A1"
            android:text="Valider" />
    </LinearLayout>

</LinearLayout>